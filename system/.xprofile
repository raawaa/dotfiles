[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

export LC_CTYPE=zh_CN.UTF-8
export TERM=xterm-256color

# disable PC speaker beep
xset -b

# export XMODIFIERS="@im=ibus"
# export GTK_IM_MODULE=ibus
# export QT_IM_MODULE=ibus
# ibus-daemon -d -x

export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS="@im=fcitx"

# fcitx

# without desktop enviroment (eg. i3wm), xdg autostart desktop files
# won't work. Fcitx must be started up manually.  The more elegant way I think
# is to config fcitx startup in i3 config file, rather than here.

xinput --set-prop 9 'libinput Accel Speed' -0.7
